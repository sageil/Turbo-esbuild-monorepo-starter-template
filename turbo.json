{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "//#lint": {
      "inputs": [
        "!.git/**",
        "!node_modules/**",
        "!tools/**",
        "!packages/**",
        "!services/**",
        "!apps/**"
      ]
    },
    "//#lint:fix": {
      "inputs": [
        "!.git/**",
        "!node_modules/**",
        "!tools/**",
        "!packages/**",
        "!services/**",
        "!apps/**"
      ]
    },
    "//#format": {
      "inputs": [
        "!.git/**",
        "!node_modules/**",
        "!tools/**",
        "!packages/**",
        "!services/**",
        "!apps/**"
      ]
    },
    "//#format:fix": {
      "inputs": [
        "!.git/**",
        "!node_modules/**",
        "!tools/**",
        "!packages/**",
        "!services/**",
        "!apps/**"
      ]
    },
    "build": {
      "dependsOn": ["^build", "lint"],
      "outputs": ["dist/**"]
    },
    "clean:build": {
      "inputs": [
        "!.git/**",
        "!node_modules/**",
        "!tools/**",
        "!packages/**",
        "!services/**",
        "!apps/**"
      ],
      "cache": false,
      "persistent": true
    },
    "dev": {
      "dependsOn": ["build"],
      "cache": false,
      "persistent": true
    },
    "start": {
      "dependsOn": ["build"],
      "cache": false,
      "persistent": false
    },
    "prod": {
      "dependsOn": ["build"],
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["build"],
      "cache": true,
      "persistent": false
    },
    "lint": {},
    "lint-all": {},
    "lint-all:fix": {},
    "lint:fix": {},
    "format": {},
    "format:fix": {}
  }
}
