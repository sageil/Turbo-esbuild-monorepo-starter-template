{
  "name": "pnpm-esbuild-repo",
  "version": "0.0.0",
  "description": "PNPM Monorepo using esbuild and turbo",
  "type": "module",
  "scripts": {
    "build": "turbo run build --cache-dir='./.cache'",
    "dev": "turbo run dev",
    "start": "turbo run start",
    "lint-format": "turbo run --parallel lint format ",
    "lint-format:fix": "turbo run --parallel lint:fix format:fix",
    "lint-all": "turbo run --parallel lint",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "test": "turbo run test",
    "prepare": "husky"
  },
  "keywords": [
    "Mono repo",
    "PNPM",
    "esbuild",
    "turbo"
  ],
  "author": "Sammy Ageil",
  "license": "MIT",
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@repo/tools": "workspace:^",
    "@swc/core": "^1.3.107",
    "@swc/jest": "^0.2.34",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.16",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "@typescript-eslint/parser": "^6.20.0",
    "esbuild-node-tsc": "^2.0.5",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.0.10",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.1",
    "nodemon": "^3.0.3",
    "prettier": "^3.2.5",
    "turbo": "^1.12.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@packages/common": "workspace:^",
    "express": "^4.18.2"
  }
}
